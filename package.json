{
  "name": "homie-iot-mongodb.ts",
  "version": "1.0.0",
  "description": "Simple app to persiste homie iot elements to mongodb",
  "keywords": [
    "mqtt",
    "homie",
    "homieiot",
    "iot",
    "logger",
    "persist",
    "mongodb"
  ],
  "main": "dist/main/index.js",
  "typings": "dist/main/index.d.ts",
  "module": "dist/module/index.js",
  "author": "Alejandro Hernandez Cobo <hello@alejandroherr.io>",
  "repository": "git@github.com:AlejandroHerr/homie-iot-mongodb.ts.git",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "24.0.15",
    "@types/node": "11.13.14",
    "@typescript-eslint/eslint-plugin": "1.10.2",
    "@typescript-eslint/parser": "1.10.2",
    "commitizen": "3.1.1",
    "cz-conventional-changelog": "2.1.0",
    "eslint": "5.16.0",
    "eslint-config-airbnb-base": "13.1.0",
    "eslint-config-airbnb-typescript": "4.0.0",
    "eslint-config-prettier": "5.0.0",
    "eslint-formatter-pretty": "2.1.1",
    "eslint-plugin-import": "2.17.3",
    "eslint-plugin-prettier": "3.1.0",
    "jest": "24.8.0",
    "nodemon": "1.19.1",
    "npm-run-all": "4.1.5",
    "pino-pretty": "3.1.0",
    "prettier": "1.19.1",
    "ts-jest": "24.0.2",
    "ts-node": "8.3.0"
  },
  "dependencies": {
    "@types/glob": "^7.1.1",
    "@types/mongodb": "^3.1.26",
    "@types/mqtt": "^2.5.0",
    "@types/pino": "^5.8.6",
    "async-mqtt": "^2.3.0",
    "awilix": "^4.2.2",
    "mongodb": "^3.2.4",
    "mqtt": "^3",
    "mqtt-pattern": "^1.2.0",
    "pino": "^5.12.2",
    "typescript": "^3.4.4"
  },
  "scripts": {
    "build": "run-s clean && run-p build:*",
    "build:main": "tsc -p tsconfig.json",
    "build:module": "tsc -p tsconfig.module.json",
    "clean": "rm -rf dist",
    "docker:clean": "run-s docker:stop docker:*:clean",
    "docker:stop": "run-p docker:*:stop",
    "docker:dev:clean": "docker-compose -f docker-compose.dev.yml -p homie-iot-mongodb.ts.dev rm",
    "docker:dev:stop": "docker-compose -f docker-compose.dev.yml -p homie-iot-mongodb.ts.dev down --remove-orphans",
    "docker:test:start": "docker-compose -f docker-compose.test.yml -p homie-iot-mongodb.ts.test up -d",
    "docker:test:watch": "docker-compose -f docker-compose.test.yml -p homie-iot-mongodb.ts.test exec node_app /bin/sh ./scripts/installAndTest.sh",
    "docker:test:coverage": "docker-compose -f docker-compose.test.yml -p homie-iot-mongodb.ts.test exec node_app /bin/sh ./scripts/installAndTestCoverage.sh",
    "docker:test:clean": "docker-compose -f docker-compose.test.yml -p homie-iot-mongodb.ts.test rm",
    "docker:test:stop": "docker-compose -f docker-compose.test.yml -p homie-iot-mongodb.ts.test down --remove-orphans",
    "lint": "yarn eslint --cache --format=pretty ./src --ext ts",
    "start": "node dist/main/index.js | pino-pretty",
    "start:dev": "ts-node --files ./src/index.ts | pino-pretty",
    "start:dev:watch": "nodemon --config ./nodemon.json",
    "start:docker:dev": "docker-compose -f docker-compose.dev.yml -p homie-iot-mongodb.ts.dev up",
    "test": "run-s docker:test:start docker:test:watch",
    "test:coverage": "run-s docker:test:start docker:test:coverage",
    "test:base": "jest"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
